>>>> OS COMANDOS ABAIXO NAO FUNCIONAM COM KVM-CLOCK, APENAS COM HPET <<<<
>>>> PARA MUDAR O CLOCK EXECUTE A LINHA ABAIXO <<<<

echo hpet > /sys/devices/system/clocksource/clocksource0/current_clocksource




call cpu_disable_ticks()
call qemu_clock_enable(vm_clock, 0)
set first_cpu->stop = 1
set first_cpu->next_cpu->stop = 1
call qemu_cpu_kick(first_cpu)
call qemu_cpu_kick(first_cpu->next_cpu)
shell date


# espera tempo arbitrario


shell date
call cpu_enable_ticks()
call qemu_clock_enable(vm_clock, 1)
set first_cpu->stop = 0
set first_cpu->stopped = 0
set first_cpu->next_cpu->stop = 0
set first_cpu->next_cpu->stopped = 0
call qemu_cpu_kick(first_cpu)
call qemu_cpu_kick(first_cpu->next_cpu)
c
